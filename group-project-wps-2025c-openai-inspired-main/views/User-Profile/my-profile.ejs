<div
  class="container min-vh-100 d-flex align-items-center justify-content-center py-5 my-5"
>
  <!-- Full Card -->
  <div
    class="card user-card row g-0 flex-column flex-lg-row align-items-stretch"
  >
    <!-- Class align-items-stretch quan trá»ng -->
    <!-- User Panel: Left Side -->
    <!-- Use partials, layouts -->
      <%- include('../partials/user-panel.ejs') %>
    <!-- Profile Content: Right Side -->
    <section class="col-12 col-lg-9 panel-info h-100">
      <div class="card-body">
        <div
          class="d-flex flex-wrap justify-content-between align-items-center gap-3 profile-header"
        >
          <div class="d-flex align-items-center gap-3">
            <img src="<%= avatar %>" alt="User avatar" class="user-avatar mt-4<%= avatar === '/img/default-avatar.png' ? ' default-avatar' : '' %>" />
            <div>
              <h3 class="fw-bold mb-0"><%= username %></h3>
              <p class="text-white-50 mb-0"><%= email %></p>
            </div>
          </div>
          <a class="btn btn-primary edit-profile-btn" href="/account/edit"
            >Edit</a
          >
        </div>

        <div class="row g-3 mt-4 profile-form">
          <!-- Full Name -->
          <div class="col-12 col-md-6">
            <label for="fullName" class="form-label">Full Name</label>
            <input
              class="form-control text-white-50"
              id="fullName"
              placeholder="Update your full name"
              <% if (fullName !== '') { %>
              value="<%= fullName %>"
              <% } %>
              readonly
            />
          </div>
          <!-- Nickname -->
          <div class="col-12 col-md-6">
            <label for="nickname" class="form-label">Nickname</label>
            <input
              class="form-control text-white-50"
              id="nickname"
              placeholder="Update your nickname"
              <% if (nickname !== '') { %>
              value="<%= nickname %>"
              <% } %>
              readonly
            />
          </div>

          <!-- Gender -->
          <div class="col-12 col-md-6">
            <label for="gender" class="form-label">Gender</label>
            <input
              class="form-control text-white-50"
              id="gender"
              placeholder="Choose your gender"
              <% if (gender !== '') { %>
              value="<%= genderLabel %>"
              <% } %>
              readonly
            />
          </div>

          <!-- Phone Number -->
          <div class="col-12 col-md-6">
            <label for="phoneNumber" class="form-label">Phone Number</label>
            <input
              class="form-control text-white-50"
              id="phoneNumber"
              placeholder="Update your phone number"
              <% if (phoneNumber !== '') { %>
              value="<%= phoneNumber %>"
              <% } %>
              readonly
            />
          </div>

          <!-- Country -->
          <div class="col-12 col-md-6">
            <label for="country" class="form-label">Country</label>
            <input
              class="form-control text-white-50"
              id="country"
              placeholder="Update your country"
              <% if (country !== '') { %>
              value="<%= countryName %>"
              <% } %>
              readonly
            />
          </div>

          <!-- Language -->
          <div class="col-12 col-md-6">
            <label for="language" class="form-label">Language</label>
            <input
              class="form-control text-white-50"
              id="language"
              placeholder="Update your language"
              <% if (language !== '') { %>
              value="<%= languageName %>"
              <% } %>
              readonly
            />
          </div>
          <p class="mt-5 mb-2 fw-semibold">My email address</p>
          <div class="email-list d-flex flex-column gap-3 mt-2">
            <div class="email-card">
              <i class="bi bi-envelope-fill fs-4"></i>
              <div class="email-meta d-flex flex-column">
                <span><%= email %></span>
                <small><%= emailTimeAgo %></small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
