<header>
  <nav class="navbar navbar-expand-lg navbar-background fixed-top">
    <div
      class="container d-flex justify-content-md-between align-items-center justify-content-between"
    >
      <a
        class="navbar-brand d-flex align-items-center gap-md-2 gap-0 text-gradient fw-bold fs-2 display-2 nav-title text-decoration-none"
        href="/"
      >
        <span class="order-2 order-md-1 ms-3 ms-md-0"
          ><i class="bi bi-controller controller fw-bold"></i
        ></span>
        <span class="title d-none d-md-inline order-1 order-md-2"
          >GameVault</span
        >
      </a>

      <div class="d-lg-none position-absolute top-0 end-0 p-2">
        <a
          href="/cart"
          class="text-decoration-none px-md-3 py-md-2 px-2 py-1 rounded-2 cart-item-hover"
        >
          <span><i class="bi bi-cart cart"></i></span>
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdown"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>

      <div
        class="collapse navbar-collapse justify-content-center"
        id="navbarNavDropdown"
      >
        <ul class="navbar-nav">
          <li class="nav-item mx-3 text-end">
            <a class="nav-link" href="/">Home</a>
          </li>

          <li class="nav-item mx-3 text-end">
            <a class="nav-link" href="/shop/admin">Shop</a>
          </li>

          <li class="nav-item mx-3 text-end">
            <a class="nav-link" href="/forum">Forum</a>
          </li>

          <li class="nav-item mx-3 text-end">
            <a class="nav-link" href="/blog">Blog</a>
          </li>

          <li class="nav-item mx-3 text-end">
            <a class="nav-link" href="/sitemap">Sitemap</a>
          </li>

          <% if (currentUser && currentUser.isAdmin) { %>
          <li class="nav-item mx-3 text-end">
            <a class="nav-link" href="/dashboard/admin">Dashboard</a>
          </li>
          <% } %>
        </ul>

        <div
          id="navButtonsMobile"
          class="d-flex align-items-center justify-content-end gap-md-3 gap-0 mx-3"
        >
          <a
            href="/cart"
            class="px-md-3 py-md-2 px-2 py-1 d-none d-md-inline rounded-2 cart-item-hover"
          >
            <span><i class="bi bi-cart cart"></i></span>
          </a>
          <div
            class="d-flex flex-column gap-md-3 gap-2 mt-2 mt-md-1 justify-content-center align-items-end"
          >
            <a
              href="/account"
              class="text-decoration-none rounded-3 px-md-3 py-md-2 px-2 py-1 user-profile-logo"
            >
              <span><i class="bi bi-person"></i></span>
            </a>
            <a
              href="/user/logout"
              class="text-decoration-none rounded-3 px-md-3 py-md-2 px-2 py-1 logout-logo"
            >
              <span><i class="bi bi-arrow-bar-right"></i></span>
            </a>
          </div>
        </div>
      </div>

      <div
        id="navButtonsDesktop"
        class="d-none d-md-flex align-items-center gap-3"
      >
        <a
          href="/cart"
          class="px-md-3 py-md-2 px-2 py-1 rounded-2 cart-item-hover"
        >
          <span><i class="bi bi-cart cart"></i></span>
        </a>

        <a
          href="/account"
          class="text-decoration-none rounded-3 px-md-3 py-md-2 px-2 py-1 user-profile-logo"
        >
          <span><i class="bi bi-person"></i></span>
        </a>
        <a
          href="/user/logout"
          class="text-decoration-none rounded-3 px-md-3 py-md-2 px-2 py-1 logout-logo"
        >
          <span><i class="bi bi-arrow-bar-right"></i></span>
        </a>
      </div>
    </div>
  </nav>
</header>
